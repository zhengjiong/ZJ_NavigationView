<resources>

    <!-- Base application theme. -->
    <style name="DefaultActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>


        <!--actionbar的顏色,因為ToolBar設置了android:background="?attr/colorPrimary",所以背景色和actionbar一致-->
        <item name="colorPrimary">@color/sky_blue</item>

        <!--頂部状态栏颜色-->
        <item name="colorPrimaryDark">@color/sky_blue_dark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>
    <style name="NavigationViewOnStatusBarDemo" parent="AppTheme.Base"/>
</resources>
